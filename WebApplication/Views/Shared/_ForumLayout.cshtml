<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/Content/js")
</head>
<body>
    <div class="container">
        <div class="navbar navbar-default">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Main</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("Index", "Manage")">Hi, @User.Identity.Name</a></li>
                        <li><a href="#">Log off</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login", "Account")">Log in</a></li>
                        <li><a href="@Url.Action("Register", "Account")">Register</a></li>
                    }
                </ul>
            </div>
        </div>
        @RenderBody()
        <hr>
        <hr>
        <footer>
            <p>&copy;</p>
        </footer>
    </div>
</body>
</html>
